<mvc:View
	controllerName="pe.com.seidor.sap.decor.ventas.controller.App"
	 xmlns:l="sap.ui.layout"
 xmlns:u="sap.ui.unified"
 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="false">
		<u:Shell
      icon="{/logo}"
      tooltip=""
   id="myShell"
   >
     <u:user>
        <u:ShellHeadUserItem
          image="sap-icon://person-placeholder"
          showPopupIndicator="false"
          username="{/usuarioWeb}" 
          />

      </u:user>
      <u:headEndItems>

        <u:ShellHeadItem
            class="btnHome"
          icon="sap-icon://home"
          tooltip="Menu"
          selected="false"
          press="goHome"/>

        <u:ShellHeadItem
          class="btnLogout"
          icon="sap-icon://log"
          tooltip="Cerrar session"
          selected="false"
          press="logout" />
      </u:headEndItems>

      <!--u:search >
        <FlexBox
                    alignItems="Start"
                    justifyContent="Center">
                    <items>
            <Title class="tituloShell"  text="{/tituloPrincipal}" ></Title>
                    </items>
        </FlexBox>
      </u:search-->

      <u:content >
        <App class="FondoMenuPrincipal" id="app" autoFocus="false"/>
      </u:content>
  </u:Shell>
        
</mvc:View>
